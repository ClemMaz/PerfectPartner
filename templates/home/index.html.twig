{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
{{ include('/components/navbar.html.twig') }}

<section class="pt-5 my-5 pt-md-5 mt-5 mb-5">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-12 col-md-5 col-lg-6 order-md-2">
				<img src="/images/PP2.png" class="mb-6 rounded-4 img-fluid mw-md-150 mw-lg-130 mb-md-0 aos-init aos-animate" alt="..." data-aos="fade-up" data-aos-delay="100">
			</div>
			<div class="col-12 col-md-7 col-lg-6 order-md-1 aos-init aos-animate" data-aos="fade-up">
				<h2 class="text-center display-4 text-md-start ">
					Bienvenue chez <span class="text-primary">Perfect Partner</span>. 
                    <br>
                    <span>Solopreneurs, trouvez enfin l'associé dont vous révez</span>
				</h2>
				<p class="mb-6 text-center lead text-md-start text-body-secondary mb-lg-8">
                    <br>
				</p>
				 <div class="text-center text-md-start">
                        {% if app.user %}
                            <a href="/rooms" class="shadow btn btn-dark lift me-1">
                                Cherchez l'associé idéal <i class="bi bi-ticket-perforated"></i>
                            </a>
                        {% else %}
                            <p>Créer un compte pour démarrer votre quête</p>
                        {% endif %}
                    </div>
			</div>
		</div>
	</div>
</section>
{{ include('/components/footer.html.twig') }}

{% endblock %}

