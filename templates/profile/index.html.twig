{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center">Welcome, {{ app.user.username }}!</h1>

            <div class="card">
                <div class="card-header">
                    <h2>Your Profile</h2>
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> {{ app.user.email }}</p>
                    <p><strong>Mes invitations envoyées :</strong></p>
                    <p><strong>Mes invitations reçues :</strong></p>
                    <p><strong>Mes infos :</strong></p>


                </div>
            </div>

            <div class="mt-3 text-center">
                <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
                <a href="{{ path('app_home') }}" class="btn btn-primary">Back to Home</a>
                <a href="{{ path('app_home') }}" class="btn btn-primary">Search Perfect Partner</a>
                <a href="{{ path('app_home') }}" class="btn btn-primary">Modifier mes informations</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
